<h2>Login</h2>

<%= flash[:notice]  %>
<div class = "form-style-7">

  <%= form_tag :sessions do %>
    <ul>
      <li><%= label_tag :name %>
      <%= text_field_tag :name %>
      <span>Enter your name here</span></li>
      <li><%= label_tag :password %>
      <%= password_field_tag :password %>
      <span>Enter your password here</span></li>
      <li><%= submit_tag "Log In" %></li>

    </ul>
    <% end %>
    <br>
    <center>
      <p>Don't have an account? <a href="/users/new"/>Start here</a></p>
    </center>
</div>
